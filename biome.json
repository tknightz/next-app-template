{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignore": ["public", ".next", "node_modules"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useButtonType": "off"
      },
      "correctness": {
        "useImportExtensions": "off"
      },
      "nursery": {
        "all": true,
        "noStaticElementInteractions": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off"
      },
      "style": {
        "all": true,
        "noImplicitBoolean": "off",
        "noDefaultExport": "off"
      }
    }
  },
  "overrides": [
    {
      "include": [
        "next.config.mjs",
        "error.tsx",
        "layout.tsx",
        "loading.tsx",
        "not-found.tsx",
        "page.tsx",
        "template.tsx"
      ]
    }
  ]
}
